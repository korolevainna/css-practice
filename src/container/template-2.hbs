<div class="page">
  <div class="page_content">
	 <div class="page_block">
		<header class="header">
			<div class="">
				{{>logo}}
			</div>
			
			<nav class="header_nav header_nav_right">
				<div class="header_nav_right">
				{{>nav list=header}}
				</div>
			</nav>
		</header>
	</div>

	<section class="pege_block">
		<div class="hero">
			{{#with hero}}
				{{>hero title=title text=text}}
				<a class="button" href="{{button.url}}">{{button.text}}</a>
			{{/with}}
		</div>
	</section>

	<section class="page_block">
		<div class="flex-container">
			{{#each preview}}
			  {{> cardPreview class="flex-item" data=this}}
			{{/each}}
		</div>
	</section>

	<main class="page_block">
		<div class="main">
			<div class="row g-0">
				<div class="col-12">
					<div class="List_header">	
							<div class="col-6">
								<h2 class="list_title">List of post</h2>
							</div>
							<div>
								<div class="category_list">
									{{#each categories}}
										<button class="category_button">{{text}}</button>
									{{/each}}
								</div>
							</div>
					</div>
				</div>
			<div class="col-7">
			   <div class="list">
				  {{#each news}}
						{{> cardPost data=this}}
				  {{/each}}
			   </div>
			</div>

			<div class="col-5">
				<aside class="list_aside">
					<div class="about">
						<h4 class="about_title">About</h4>
						<p class="about_text">{{about}}</p>
					</div>

					{{> linkList data=archive title="Archives"}}

					{{> linkList data=social title="Sosial"}}
				</aside>
			</div>
			</div>
		</div>
	</main>

	
    <div class="page_block">
		<footer class="footer">
			<div>
				{{>logo}}
				<span class="footer_copyright"> 2023-2024</span>
			</div>
			{{#each footer}}
				<div>
					<span class="footer_title">{{title}}</span>
					{{>nav list=links isVertical=true}}
				</div>
			{{/each}}
		</footer>
	</div>
  </div>
</div>